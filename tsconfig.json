{
	"extends": "@oly_op/tsconfig/tsconfig.json",
	"compilerOptions": {
		"jsx": "react",
		"jsxFactory": "createElement",
		"baseUrl": "./",
		"paths": { "*": ["types/*"] }
	},
	"ts-node": {
		"files": true,
		"compilerOptions": {
			"target": "ES6",
			"module": "CommonJS",
			"baseUrl": "./",
			"paths": { "*": ["types/*"] }
		},
		"moduleTypes": {
			"scripts/*": "cjs",
			"webpack.config.ts": "cjs"
		}
	},
	"include": [
		"src",
		"types",
		"scripts",
		"webpack.config.ts"
	]
}