{
	"extends": "@oly_op/tsconfig/tsconfig.json",
	"compilerOptions": {
		"jsx": "react",
		"jsxFactory": "createElement"
	},
	"ts-node": {
		"compilerOptions": {
			"target": "ES6",
			"module": "CommonJS"
		},
		"moduleTypes": {
			"scripts/*": "cjs",
			"webpack.config.ts": "cjs"
		}
	},
	"exclude": [
		"build"
	]
}